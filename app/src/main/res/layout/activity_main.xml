<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/btn_asm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asm" />
    <Button
        android:id="@+id/btn_mvvm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mvvm" />
    <Button
        android:id="@+id/coroutine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="协程" />
    <Button
        android:id="@+id/btn_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppViewScreen"
       />

    <Button
        android:id="@+id/tv_asm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppViewScreen"
         />
    <Button
        android:id="@+id/btn_asynctask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="异步asynctask"
        />
    <Button
        android:id="@+id/btn_leakCannary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="leakcannary"
       />
    <Button
        android:id="@+id/btn_blockCannary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="blockcannary"
       />
    <Button
        android:id="@+id/btn_kotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kotlin"
        />
    <Button
        android:id="@+id/btn_xlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kotlin"
        />

</LinearLayout>